{
  "name": "loggry",
  "version": "0.1.3",
  "description": "Lightweight NodeJS logger bus",
  "type": "module",
  "main": "build/index.cjs",
  "types": "build/index.d.ts",
  "module": "build/index.js",
  "sideEffects": false,
  "files": [
    "build",
    "src/*.ts"
  ],
  "scripts": {
    "convert-cjs": "node scripts/convert-cjs.js",
    "build": "rm -rf build && yarn build:cjs && yarn build:mjs",
    "build:cjs": "tsc -p tsconfig.cjs.json && yarn convert-cjs",
    "build:mjs": "tsc -p tsconfig.mjs.json --declaration",
    "test": "jest",
    "test:cov": "CI=1 jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/3axap4eHko/loggry.git"
  },
  "keywords": [
    "loggry",
    "logger",
    "logging",
    "logs",
    "sysadmin",
    "bunyan",
    "pino",
    "loglevel",
    "tools"
  ],
  "author": "Ivan Zakharchanka",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/3axap4eHko/loggry/issues"
  },
  "homepage": "https://github.com/3axap4eHko/loggry#readme",
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.9",
    "glob": "^8.0.1",
    "jest": "^27.3.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.2"
  }
}
